<style type="text/css">
   .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.50 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.50 | round: 0 }}px;
  }
   @media screen and (min-width: 576px) and (max-width: 749px){
   .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
   }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .template-404 .title{font-size: var(--font-h1-size);font-weight: 600;margin: 0;}
  .template-404 .button{margin:20px 0 0;}
  .template-404 .subtext-404{font-size: 14vw;line-height: 1; margin: 0;font-weight: 700;color: rgba(var(--color-button),0.5);}
  .template-404.page-margin {margin-top: 0;margin-bottom: 0;}
  
 @media screen and (max-width: 1540px) { .template-404 .subtext-404{font-size: 20rem;line-height: 1;}}
 @media screen and (max-width: 990px) { 
   .template-404 .subtext-404{font-size: 20rem;line-height: 1;}
   .template-404 .title{font-size: calc(var(--font-h1-size) * 0.8);}
    }
 @media screen and (max-width: 749px){
   .template-404 {margin-top: 5.2rem;}
   .template-404 .subtext-404{font-size: 14rem;line-height: 1;}
   .template-404 .title{font-size: calc(var(--font-h1-size) * 0.6);}
 }     
  @media screen and (max-width: 749px){
    .template-404 {margin-top: 3rem;} 
    .template-404 .title {  font-size: calc(var(--font-h1-size) * 0.4);}
   }
</style>

<div class="template-404 page-width page-margin center {% if section.settings.page_full_width %} page-full-width {% else %} page-width {% endif %} {% if section.settings.page_full_width_spacing %} page-full-width_spacing {% endif %}section-{{ section.id }}-padding">
  <p class="subtext-404">
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
    <p class="description">
    {{ 'templates.404.description' | t }}
  </p>
  <a href="{{ routes.root_url }}" class="button">
     {{ 'templates.404.button_text' | t }}
  </a>
</div>
{% schema %}
{
  "name": "404 Page",
  "settings": [
   {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
   "presets": [
    {
      "name": "404 Page"
    }
   ]
}
{% endschema %} 
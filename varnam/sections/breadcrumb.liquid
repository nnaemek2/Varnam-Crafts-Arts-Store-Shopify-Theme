    },
     {
      "type": "header",
      "content": "t:sections.slideshow.settings.scroll-to-down.content"
    },
    {
       "type": "checkbox",
      "id": "enable_scroll-down",
      "label": "t:sections.slideshow.settings.enable_scroll-down.label",
